{
    "manifest_version": 2,

    "name": "Bandcamp Player",
    "description":
        "Bandcamp player for confortable dig",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "icon16.png",
        "default_title": "Bandcamp Player",
        "default_popup": "popup.html"
    },

    "background": {
        "page": "background.html",
        "persistent": false
    },

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "permissions": ["tabs","background","storage", "*://*.bandcamp.com/*"]
}
