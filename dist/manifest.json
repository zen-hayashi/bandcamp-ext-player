{
    "manifest_version": 2,

    "name": "Bandcamp Player",
    "description":
        "Bandcamp player for confortable dig",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "icon16.png",
        "default_title": "Bandcamp Player",
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": [ "https://*.bandcamp.com/*" ],
            "js": [ "js/eventPage.js" ],
            "run_at": "document_end"
        }
    ],

    "background": {
        "page": "background.html",
        "persistent": false
    },
    "content_security_policy": "script-src 'self' chrome-extension://lmhkpmbekcpmknklioeibfkpmmfibljd 'unsafe-eval'; object-src 'self'",

    "icons": {
        "16": "icon16.png",
        "48": "icon32.png",
        "128": "icon128.png"
    },

    "permissions": ["tabs","background","storage", "*://*.bandcamp.com/*"]
}
